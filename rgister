// client/src/pages/auth/register.jsx
import React, { useMemo, useState } from "react";
import {
  Box,
  Card,
  CardContent,
  CardHeader,
  Divider,
  Stack,
  FormControl,
  InputLabel,
  OutlinedInput,
  TextField,
  Button,
  Typography,
  CircularProgress,
} from "@mui/material";
import CheckCircleIcon from "@mui/icons-material/CheckCircle";
import { useNavigate } from "react-router-dom";
import { LoginLayout } from "@/components/auth/login-layout";

export default function Register() {
  const navigate = useNavigate();

  // fields
  const [requesterName, setRequesterName] = useState("");
  const [requesterStaffId, setRequesterStaffId] = useState("");
  const [orgName, setOrgName] = useState("");
  const [orgDescription, setOrgDescription] = useState("");
  const [gbgf, setGbgf] = useState("");
  const [serviceLine, setServiceLine] = useState("");
  const [eimName, setEimName] = useState("");
  const [eimId, setEimId] = useState("");

  // ui
  const [loading, setLoading] = useState(false);
  const [successMessage, setSuccessMessage] = useState("");
  const [error, setError] = useState("");

  const isValid = useMemo(
    () =>
      requesterName.trim() &&
      requesterStaffId.trim() &&
      orgName.trim() &&
      orgDescription.trim() &&
      gbgf.trim() &&
      serviceLine.trim() &&
      eimName.trim() &&
      eimId.trim(),
    [
      requesterName,
      requesterStaffId,
      orgName,
      orgDescription,
      gbgf,
      serviceLine,
      eimName,
      eimId,
    ]
  );

  const handleSubmit = (e) => {
    e.preventDefault();
    setError("");
    setSuccessMessage("");

    if (!isValid) {
      setError("Please fill all required fields.");
      return;
    }

    // simulate submit + loader
    setLoading(true);
    setTimeout(() => {
      setLoading(false);
      setSuccessMessage("Thank you");
    }, 900);
  };

  return (
    <LoginLayout>
      <Card sx={{ maxWidth: 900, mx: "auto" }}>
        <CardHeader title="Register Organization Access" sx={{ py: 1.5 }} />
        <Divider />
        <CardContent sx={{ py: 2 }}>
          {error && (
            <Typography color="error" variant="body2" sx={{ mb: 1 }}>
              {error}
            </Typography>
          )}
          {successMessage && (
            <Box display="flex" alignItems="center" sx={{ mb: 1 }}>
              <CheckCircleIcon fontSize="small" />
              <Typography sx={{ ml: 1 }} color="success.main" variant="body2">
                {successMessage}
              </Typography>
            </Box>
          )}

          <Box component="form" onSubmit={handleSubmit} noValidate>
            <Stack spacing={1.5}>
              {/* ONLY CHANGE: put Requester Name + Staff ID side-by-side */}
              <Stack direction={{ xs: "column", md: "row" }} spacing={1.5}>
                <FormControl fullWidth size="small">
                  <InputLabel>Requester Name</InputLabel>
                  <OutlinedInput
                    label="Requester Name"
                    value={requesterName}
                    onChange={(e) => setRequesterName(e.target.value)}
                  />
                </FormControl>
                <FormControl fullWidth size="small">
                  <InputLabel>Requester Staff ID</InputLabel>
                  <OutlinedInput
                    label="Requester Staff ID"
                    value={requesterStaffId}
                    onChange={(e) => setRequesterStaffId(e.target.value)}
                  />
                </FormControl>
              </Stack>

              {/* keep remaining fields as-is, just compact size and tight spacing */}
              <FormControl fullWidth size="small">
                <InputLabel>Organization Name</InputLabel>
                <OutlinedInput
                  label="Organization Name"
                  value={orgName}
                  onChange={(e) => setOrgName(e.target.value)}
                />
              </FormControl>

              <TextField
                label="Organization Description"
                value={orgDescription}
                onChange={(e) => setOrgDescription(e.target.value)}
                multiline
                minRows={2}       // compact
                fullWidth
                size="small"
              />

              <FormControl fullWidth size="small">
                <InputLabel>GBGF</InputLabel>
                <OutlinedInput
                  label="GBGF"
                  value={gbgf}
                  onChange={(e) => setGbgf(e.target.value)}
                />
              </FormControl>

              <FormControl fullWidth size="small">
                <InputLabel>Service Line</InputLabel>
                <OutlinedInput
                  label="Service Line"
                  value={serviceLine}
                  onChange={(e) => setServiceLine(e.target.value)}
                />
              </FormControl>

              <FormControl fullWidth size="small">
                <InputLabel>EIM Name</InputLabel>
                <OutlinedInput
                  label="EIM Name"
                  value={eimName}
                  onChange={(e) => setEimName(e.target.value)}
                />
              </FormControl>

              <FormControl fullWidth size="small">
                <InputLabel>EIM ID</InputLabel>
                <OutlinedInput
                  label="EIM ID"
                  value={eimId}
                  onChange={(e) => setEimId(e.target.value)}
                />
              </FormControl>

              {/* Actions always visible without scroll */}
              <Stack direction="row" spacing={2} alignItems="center" sx={{ pt: 0.5 }}>
                <Button
                  type="submit"
                  variant="contained"
                  size="medium"
                  disabled={!isValid || loading}
                >
                  {loading ? (
                    <>
                      <CircularProgress size={18} sx={{ mr: 1 }} />
                      Submitting...
                    </>
                  ) : (
                    "Submit"
                  )}
                </Button>
                <Button variant="text" onClick={() => navigate("/auth/login")}>
                  Back to Login
                </Button>
              </Stack>
            </Stack>
          </Box>
        </CardContent>
      </Card>
    </LoginLayout>
  );
}
