import React, { createContext, useContext, useState, useEffect } from "react";
import axios from "axios";

const AuthContext = createContext(undefined);

export const AuthProvider = ({ children }) => {
    const [user, setUser] = useState(null);
    const [loading, setLoading] = useState(false);
    const APIS_GATEWAY_URL = import.meta.env.VITE_API_GATEWAY_URL;

    // On mount: check if cookie already exists by calling /auth/me.
    const checkAuth = async () => {
        try {
            const response = await axios.get(
                `${APIS_GATEWAY_URL}/auth/me`,
                { withCredentials: true },
            );
            console.log("User data fetched successfully:", response.data);

            // ⬅️ REVERSE is_platform_admin HERE
            const reversedUser = {
                ...response.data,
                claims: {
                    ...response.data.claims,
                    is_platform_admin: !response.data.claims.is_platform_admin,
                },
            };

            setUser(reversedUser);

        } catch (error) {
            if (error.response && error.response.status === 401) {
                console.warn("User is not authenticated. Redirecting to login page.");
                setUser(null);

                if (window.location.pathname !== "/auth/login") {
                    window.location.href = "/auth/login";
                }
            } else {
                console.error("Failed to fetch user data:", error);
                setUser(null);
            }
        } finally {
            setLoading(false);
        }
    };

    useEffect(() => {
        checkAuth();
    }, []);

    // Function to log in the user
    const login = async (staff_id, password) => {
        setLoading(true);
        const encodedPassword = btoa(password);

        try {
            const response = await axios.post(
                `${APIS_GATEWAY_URL}/auth/login`,
                {
                    staff_id: staff_id,
                    password: encodedPassword,
                },
                {
                    withCredentials: true,
                    headers: {
                        "Content-Type": "application/json",
                        Accept: "application/json",
                    },
                },
            );

            let user_data = response.data;

            // ⬅️ REVERSE is_platform_admin HERE
            const reversedUser = {
                ...user_data,
                claims: {
                    ...user_data.claims,
                    is_platform_admin: !user_data.claims.is_platform_admin,
                },
            };

            setUser(reversedUser);
            return reversedUser;

        } catch (error) {
            console.error("Login failed:", error);
            throw error;
        } finally {
            setLoading(false);
        }
    };

    // Function to log out the user
    const logout = async () => {
        setLoading(true);
        try {
            await axios.post(
                `${APIS_GATEWAY_URL}/auth/logout`,
                {},
                { withCredentials: true },
            );
            setUser(null);
        } catch (error) {
            console.error("Logout failed:", error);
            throw error;
        } finally {
            setUser(null);
            setLoading(false);
        }
    };

    return (
        <AuthContext.Provider value={{ user, loading, login, logout }}>
            {children}
        </AuthContext.Provider>
    );
};

// Custom hook to use the AuthContext
export const useAuth = () => {
    const context = useContext(AuthContext);
    if (context === undefined) {
        throw new Error("useAuth must be used within an AuthProvider");
    }
    return context;
};